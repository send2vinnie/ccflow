<UserControl x:Class="BP.FlowNodePictureContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
 xmlns:pic="clr-namespace:BP.Picture" xmlns:Controls="clr-namespace:BP.Controls">
         <Grid Name="gridContainer"     Width="200" Height="160"  HorizontalAlignment="Center" VerticalAlignment="Center">
             
        <pic:OrdinaryNode x:Name="picOrdinaryNode" ></pic:OrdinaryNode>
        <pic:HeLiuNode  x:Name="picHeLiuNode"></pic:HeLiuNode>
        <pic:FenLiuNode     x:Name="picFenLiuNode"></pic:FenLiuNode>
        <pic:FenHeLiuNode    x:Name="picFenHeLiuNode"></pic:FenHeLiuNode>
        <pic:SubThreadNode  x:Name="picSubThreadNode"></pic:SubThreadNode>
             
        <TextBlock   x:Name="txtNodeName" Foreground="Black" Text="新建节点"  FontSize="12"    
                     VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"  MaxWidth="90"  >

         </TextBlock>

         <TextBox Name="tbNodeName"   TextChanged="tbNodeName_TextChanged"  VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed" LostFocus="tbNodeName_LostFocus"></TextBox>
    </Grid>  
</UserControl>
