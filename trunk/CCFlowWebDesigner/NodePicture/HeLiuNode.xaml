<UserControl x:Class="BP.Picture.HeLiuNode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
     >
    <Grid x:Name="LayoutRoot"  >

        <!--<Rectangle  Name="picRect" Fill="White" Stroke="Green"  StrokeThickness="2"   Width="120" Height="40" ></Rectangle>-->
        <Path Name="picRect" Width="120" Height="42" Fill="White" Stroke="Green"  StrokeThickness="2">
            <Path.Data >
                <PathGeometry  >
                    <PathGeometry.Figures  >
                        <PathFigure StartPoint="0,0"  >
                            <!--起点坐标（左，高）-->
                            <PathFigure.Segments  >
                                <LineSegment  Point="0,2"/>
                                <LineSegment  Point="120,2"/>
                                <LineSegment  Point="100,40"/>
                                <LineSegment  Point="20,40"/>
                                <LineSegment  Point="0,2"/>
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Grid>
</UserControl>
