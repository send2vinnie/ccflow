<UserControl x:Class="BP.FlowNodePictureContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
 xmlns:pic="clr-namespace:BP.Picture" xmlns:Controls="clr-namespace:BP">
         <Grid Name="gridContainer"     Width="200" Height="160"  HorizontalAlignment="Center" VerticalAlignment="Center">
        <pic:StationNode x:Name="picSTATION"></pic:StationNode>
        <pic:BranchFlowNode x:Name="picBRANCH"></pic:BranchFlowNode>
        <pic:InteractoinAcitivity x:Name="picINTERACTION"></pic:InteractoinAcitivity>
        <pic:InitialAcitivity    x:Name="picBegin"></pic:InitialAcitivity>
        <pic:CompletionFlowNode     x:Name="picEnd"></pic:CompletionFlowNode>
        <pic:AutomationFlowNode    x:Name="picAUTOMATION"></pic:AutomationFlowNode>
        <pic:MergeFlowNode  x:Name="picMERGE"></pic:MergeFlowNode>
             
           
             
        <TextBlock   x:Name="txtFlowNodeName" Foreground="Black" Text="新建节点"  FontSize="12"    
                     VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"  MaxWidth="90"  >

         </TextBlock>

         <TextBox Name="tbNodeName"   TextChanged="tbNodeName_TextChanged"  VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed" LostFocus="tbNodeName_LostFocus"></TextBox>
    </Grid>  
</UserControl>
