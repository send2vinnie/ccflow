<UserControl x:Class="BP.Auth.DeptEditControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid Margin="38,34,88,118" Width="250" Height="150">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" 
    			Text="上级机构：" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="59,0,0,0" TextWrapping="Wrap" 
    			Text="{Binding UpDeptName}" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,24,0,0" TextWrapping="Wrap" 
    			Text="机构名称：" VerticalAlignment="Top"/>
            <TextBox Margin="59,20,115,0" TextWrapping="Wrap"
    			Text="{Binding EditDept.Name, Mode=TwoWay}"
    			VerticalAlignment="Top" BorderThickness="0,0,0,1"/>
            <Button Content="保存" Height="25" Margin="0,0,69,8" x:Name="Save" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="65"/>
            <Button Content="关闭" Height="25" x:Name="Cancel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="65" Margin="0,0,0,8"/>
        </Grid>
    </Grid>
</UserControl>
